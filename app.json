{
  "expo": {
    "name": "RmdSavings",
    "slug": "rmdsavings",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "backgroundColor": "#6366f1",
      "resizeMode": "contain"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSFaceIDUsageDescription": "Use Face ID to authenticate securely and access your RampMeDaddy account",
        "NSLocationWhenInUseUsageDescription": "This identifier is only used to authenticate the user."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#6366f1"
      },
      "permissions": [
        "USE_BIOMETRIC",
        "USE_FINGERPRINT"
      ]
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-local-authentication",
      "expo-web-browser"
    ],
    "scheme": "rmdsavings"
  }
}
